<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5354"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context="com.example.kunal.currencyconvertor.Activity.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="UNITED DOLLAR"
            android:id="@+id/first_countryname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText

            android:focusable="false"
            android:id="@+id/first_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="50sp" />

        <TextView
            android:alpha="0.5"

            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="USD"
            android:id="@+id/first_countrycode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:background="#fff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <TextView
            android:alpha="0.5"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="#FF5354"
            android:text="INR"
            android:id="@+id/second_countrycode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/second_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:gravity="right"
            android:inputType="number|numberDecimal"
            android:textColor="#FF5354"
            android:textSize="50sp" />

        <TextView
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="#FF5354"
            android:text="INDIAN RUPEES"
            android:id="@+id/second_countryname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="50dp"
        app:civ_border_color="#FF5354"
        android:src="#fff"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/changePosition"
        android:src="@drawable/ic_arrow_downward_black_24dp"
        app:civ_border_color="#FFf"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp" />

</FrameLayout>
